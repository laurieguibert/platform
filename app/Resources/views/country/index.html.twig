{% extends 'base.html.twig' %}

{% block body %}
    <h1>Countries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Alpha2</th>
                <th>Alpha3</th>
                <th>Enname</th>
                <th>Frname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td><a href="{{ path('country_show', { 'id': country.id }) }}">{{ country.id }}</a></td>
                <td>{{ country.code }}</td>
                <td>{{ country.alpha2 }}</td>
                <td>{{ country.alpha3 }}</td>
                <td>{{ country.enName }}</td>
                <td>{{ country.frName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('country_show', { 'id': country.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
