{% extends 'base.html.twig' %}

{% block body %}
    <h1>Part</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ part.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ part.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ part.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if part.createdat %}{{ part.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if part.updatedat %}{{ part.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('part_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('part_edit', { 'id': part.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
